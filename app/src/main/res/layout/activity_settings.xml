<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="start" android:layout_margin="16dp">

        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="30sp"/>

        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_how_to_use"
                android:textSize="24sp"
                android:layout_marginTop="32dp"/>

        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_how_to_use_1"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_how_to_use_2"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_how_to_use_3"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="/sdcard/Pictures/DrawingForKids (sample)"
                android:id="@+id/savedDirectoryText"
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        <Button
                android:text="@string/button_view_saved_drawings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/viewSavedButton"
                android:layout_marginTop="8dp" android:padding="16dp"/>


        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_premium_version"
                android:textSize="24sp"
                android:layout_marginTop="32dp"/>

        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_premium_version_1"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_premium_version_2"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_premium_version_3"
                android:id="@+id/billingClientStatus"
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        <Button
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/button_buy_premium"
                android:id="@+id/buyButton"
                android:textSize="16sp"
                android:layout_marginTop="8dp" android:padding="16dp"/>
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_premium_version_4"
                android:id="@+id/priceText"
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_premium_version_5"
                android:id="@+id/premiumVersionText"
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>


        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_feedback"
                android:textSize="24sp"
                android:layout_marginTop="32dp"/>

        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_feedback_1"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        <Button
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_feedback_2"
                android:id="@+id/feedbackButton"
                android:textSize="16sp"
                android:layout_marginTop="8dp" android:padding="16dp"/>


        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_about_the_author"
                android:textSize="24sp"
                android:layout_marginTop="32dp"/>

        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/text_about_the_author_1"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
        />
    </LinearLayout>
</ScrollView>